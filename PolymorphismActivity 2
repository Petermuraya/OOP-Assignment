# Base class
class Vehicle:
    def move(self):
        print("This vehicle moves in some way.")


# Derived classes with their own version of move()
class Car(Vehicle):
    def move(self):
        print("Driving on the road.")


class Plane(Vehicle):
    def move(self):
        print("Flying in the sky.")


class Boat(Vehicle):
    def move(self):
        print("Sailing on the water.")


# Testing polymorphism
vehicles = [Car(), Plane(), Boat()]

for v in vehicles:
    v.move()   # Same method name, but different behavior
